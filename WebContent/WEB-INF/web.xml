<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>ChuMeet</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

   <resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/TestDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<!-- ******************會員用********************* -->
	<!--  訪客查找會員 -->
	<servlet>
		<servlet-name>MemberGuestServlet</servlet-name>
		<servlet-class>com.member.controller.guestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberGuestServlet</servlet-name>
		<url-pattern>/member/guest.do</url-pattern>
	</servlet-mapping>
	<!--  登入會員 -->
	<servlet>
		<servlet-name>MemberLoginServlet</servlet-name>
		<servlet-class>com.member.controller.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberLoginServlet</servlet-name>
		<url-pattern>/member/memberLogin.do</url-pattern>
	</servlet-mapping>
	<!--  登出會員 -->
	<servlet>
		<servlet-name>MemberLogoutServlet</servlet-name>
		<servlet-class>com.member.controller.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberLogoutServlet</servlet-name>
		<url-pattern>/member/memberLogout.do</url-pattern>
	</servlet-mapping>
	<!--  會員個人資料切換 -->
	<servlet>
		<servlet-name>MemberServlet</servlet-name>
		<servlet-class>com.member.controller.memberHomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberServlet</servlet-name>
		<url-pattern>/member/memberHome.do</url-pattern>
	</servlet-mapping>
	
	<!-- ******************會員用********************* -->
	
</web-app>
